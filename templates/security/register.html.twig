{% block title %}{{ vars.title }}{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}
{% block page_title %}{% endblock %}
{% block body %}
    <div class="col-md-4 offset-md-4">
        <div class="card mt-5">
            <div class="card-body">
                <h2 class="card-title">Finish Registration</h2>
                <p>Finish your registration by creating a password with at least 5 characters. You will be logged in automatically after finishing registration.</p>
                {{ form_start(registerForm) }}
                <div class="row">
                    <div class="col">{{ form_row(registerForm.firstName) }}</div>
                    <div class="col">{{ form_row(registerForm.lastName) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(registerForm.email) }}</div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_rest(registerForm) }}
                        <button class="btn btn-lg btn-primary btn-block" type="submit">
                            Finish Registration
                        </button>
                    </div>
                </div>
                {{ form_end(registerForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{{ parent() }}{% endblock %}


