{% extends 'base.html.twig' %}

{% block title %}Unsubscribe{% endblock %}

{% block body %}
    <div class="row justify-content-md-center">
        <div class="col-xl-9 col-md-12">
            <div class="card mt-5">
                <div class="card-body">
                    <h1>Just to Confirm..</h1>
                    <p>We have found your account. If you would like to unsubscribe, use the button below.</p>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.firstName) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.lastName) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.email) }}
                        </div>
                    </div>

                    {{ form_rest(form) }}

                    <button class="btn btn-primary" type="submit">Remove Account</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
